generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Role {
    ADMIN
    USER
}

enum Status {
    TODO
    IN_PROGRESS
    FINISHED
}

model User {
    id Int @id @default(autoincrement())
    name String
    email String
    password String
    task Task[]
}

model Task {
    id Int @id @default(autoincrement())
    header String
    body String?
    date DateTime @default(now())
    limit_date DateTime
    status Status @default(TODO)
    user User @relation(fields: [userId], references: [id])
    userId Int
}